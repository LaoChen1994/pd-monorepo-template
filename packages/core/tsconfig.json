{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/*.ts"]
}
